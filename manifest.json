{
    "manifest_version": 2,
    "name":    "Should I reply?",
    "version": "0.0",
    "content_scripts": [{
        "matches": ["*://*.facebook.com/*"],
        "js":      ["content.js"]
    }],
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },

    "permissions": ["activeTab"]
}
